model User {
  id       String @id @default(uuid())
  username String @unique
  email    String @unique

  password String?
  name     String?
  birthday DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  googleId  String? @unique
  discordId String? @unique

